#include <stdio.h>
#include <ctype.h>

#define ALPHABET_SIZE 26

void countLetters(const char *filename, int letterCount[ALPHABET_SIZE]) {
    FILE *file = fopen(filename, "r");

    if (file == NULL) {
        perror("Error opening file");
        return;
    }

    for (int i = 0; i < ALPHABET_SIZE; i++) {
        letterCount[i] = 0;
    }

    int c;
    while ((c = fgetc(file)) != EOF) {
        // Check if the character is an alphabet letter
        if (isalpha(c)) {
            c = tolower(c);
            letterCount[c - 'a']++;
        }
    }
    fclose(file);
}

int main() {
    int letterCount[ALPHABET_SIZE];
    const char *filename = "file.txt";
    countLetters(filename, letterCount);

    for (int i = 0; i < ALPHABET_SIZE; i++) {
        printf("%c: %d\n", 'a' + i, letterCount[i]);
    }

    return 0;
}

